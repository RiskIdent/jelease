{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/RiskIdent/jelease/raw/main/jelease.schema.json",
  "$ref": "#/$defs/config",
  "$defs": {
    "config": {
      "properties": {
        "dryRun": {
          "type": "boolean"
        },
        "packages": {
          "items": {
            "$ref": "#/$defs/package"
          },
          "type": "array"
        },
        "github": {
          "$ref": "#/$defs/github"
        },
        "jira": {
          "$ref": "#/$defs/jira"
        },
        "newReleases": {
          "$ref": "#/$defs/newReleases"
        },
        "http": {
          "$ref": "#/$defs/http"
        },
        "log": {
          "$ref": "#/$defs/log"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "github": {
      "properties": {
        "url": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "format": "uri"
        },
        "tempDir": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "format": "uri"
        },
        "auth": {
          "$ref": "#/$defs/githubAuth"
        },
        "pr": {
          "$ref": "#/$defs/githubPr"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "githubAuth": {
      "properties": {
        "type": {
          "$ref": "#/$defs/githubAuthType"
        },
        "token": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "app": {
          "$ref": "#/$defs/githubAuthApp"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "githubAuthApp": {
      "oneOf": [
        {
          "required": [
            "privateKeyPath"
          ],
          "title": "privateKeyPath"
        },
        {
          "required": [
            "privateKeyPem"
          ],
          "title": "privateKeyPem"
        }
      ],
      "properties": {
        "id": {
          "type": "integer"
        },
        "privateKeyPath": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "privateKeyPem": {
          "$ref": "#/$defs/rsaPrivateKeyPem"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "githubAuthType": {
      "type": "string",
      "enum": [
        "pat",
        "app"
      ],
      "title": "GitHub auth type"
    },
    "githubCommitter": {
      "properties": {
        "name": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "email": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "format": "idn-email"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "githubPr": {
      "properties": {
        "title": {
          "$ref": "#/$defs/template"
        },
        "description": {
          "$ref": "#/$defs/template"
        },
        "branch": {
          "$ref": "#/$defs/template"
        },
        "commit": {
          "$ref": "#/$defs/template"
        },
        "committer": {
          "$ref": "#/$defs/githubCommitter"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "http": {
      "properties": {
        "port": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "jira": {
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "skipCertVerify": {
          "type": "boolean"
        },
        "auth": {
          "$ref": "#/$defs/jiraAuth"
        },
        "issue": {
          "$ref": "#/$defs/jiraIssue"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "jiraAuth": {
      "properties": {
        "type": {
          "$ref": "#/$defs/jiraAuthType"
        },
        "token": {
          "type": "string"
        },
        "user": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "jiraAuthType": {
      "type": "string",
      "enum": [
        "pat",
        "token"
      ],
      "title": "Jira auth type"
    },
    "jiraIssue": {
      "properties": {
        "labels": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "status": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "project": {
          "type": "string"
        },
        "projectNameCustomField": {
          "type": "integer"
        },
        "comments": {
          "$ref": "#/$defs/jiraIssueComments"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "jiraIssueComments": {
      "properties": {
        "updatedIssue": {
          "$ref": "#/$defs/template"
        },
        "noConfig": {
          "$ref": "#/$defs/template"
        },
        "noPatches": {
          "$ref": "#/$defs/template"
        },
        "prCreated": {
          "$ref": "#/$defs/template"
        },
        "prFailed": {
          "$ref": "#/$defs/template"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "log": {
      "properties": {
        "format": {
          "$ref": "#/$defs/logFormat"
        },
        "level": {
          "$ref": "#/$defs/logLevel"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "logFormat": {
      "type": "string",
      "enum": [
        "pretty",
        "json"
      ],
      "title": "Logging format"
    },
    "logLevel": {
      "type": "string",
      "enum": [
        "debug",
        "info",
        "warn",
        "error",
        "fatal",
        "panic",
        "disabled",
        "trace"
      ],
      "title": "Logging level"
    },
    "newReleases": {
      "properties": {
        "auth": {
          "$ref": "#/$defs/newReleasesAuth"
        },
        "projects": {
          "items": {
            "$ref": "#/$defs/newReleasesProject"
          },
          "type": "array"
        },
        "defaults": {
          "$ref": "#/$defs/newReleasesDefaults"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "newReleasesAuth": {
      "properties": {
        "apiKey": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "newReleasesDefaults": {
      "properties": {
        "emailNotification": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "newReleasesExclusion": {
      "properties": {
        "value": {
          "type": "string"
        },
        "inverse": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "newReleasesProject": {
      "properties": {
        "name": {
          "type": "string"
        },
        "provider": {
          "type": "string"
        },
        "emailNotification": {
          "type": "string"
        },
        "excludeVersionRegexp": {
          "items": {
            "$ref": "#/$defs/newReleasesExclusion"
          },
          "type": "array"
        },
        "excludePrereleases": {
          "type": "boolean"
        },
        "excludeUpdated": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "package": {
      "properties": {
        "name": {
          "type": "string"
        },
        "repos": {
          "items": {
            "$ref": "#/$defs/packageRepo"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "packageRepo": {
      "properties": {
        "url": {
          "type": "string",
          "format": "uri-reference"
        },
        "patches": {
          "items": {
            "$ref": "#/$defs/packageRepoPatch"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "packageRepoPatch": {
      "oneOf": [
        {
          "required": [
            "regex"
          ],
          "title": "regex"
        },
        {
          "required": [
            "yq"
          ],
          "title": "yq"
        }
      ],
      "properties": {
        "file": {
          "type": "string"
        },
        "regex": {
          "$ref": "#/$defs/patchRegex"
        },
        "yq": {
          "$ref": "#/$defs/patchYq"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "patchRegex": {
      "properties": {
        "match": {
          "$ref": "#/$defs/regexPattern"
        },
        "replace": {
          "$ref": "#/$defs/template"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "match",
        "replace"
      ]
    },
    "patchYq": {
      "properties": {
        "expression": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "expression"
      ]
    },
    "regexPattern": {
      "type": "string",
      "format": "regex",
      "title": "Regular Expression pattern (regex)"
    },
    "rsaPrivateKeyPem": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "contentMediaType": "application/x-pem-file",
      "title": "PEM-formatted RSA private key",
      "examples": [
        "-----BEGIN RSA PRIVATE KEY-----\nbG9yZW0gaXBzdW0sIHNlY3JldCBrZXkgYmFzZTY0IGdvZXMgaGVyZS4u\n-----END RSA PRIVATE KEY-----\n"
      ]
    },
    "template": {
      "type": "string",
      "title": "Go template"
    }
  }
}