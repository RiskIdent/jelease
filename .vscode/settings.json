{
    "cSpell.words": [
        "gonic",
        "jelease",
        "newreleases",
        "Templ",
        "templating",
        "tmpl",
        "zerolog"
    ],
    "files.exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/Thumbs.db": true,
      "**/*_templ.go": true
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "*": "${capture}.license",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
        "Chart.yaml": "Chart.lock, .helmignore",
    },
    "explorer.fileNesting.expand": false
}
